{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "views/**/*",
        "watchAssets": true
      },
      {
        "include": "public/**/*",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  },
  "generateOptions": {
    "spec": false
  }
}
