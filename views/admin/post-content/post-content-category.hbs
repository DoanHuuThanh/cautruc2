<div id="current-category" data-current_category="{{json postCategories}}">
    {{#if postCategories.length}}
    {{> admin-table headers= headers data= postCategories keys= keys button_delete="delete-post-category"}}
    {{{renderPagination currentPage totalPages limit}}}
    {{else}}
    <div class="flex items-center justify-center h-[500px]">
        <p class="text-[30px] font-bold text-gray-500">Không có dữ liệu.</p>
    </div>
    {{/if}}

    <div class="hidden fixed inset-0 bg-gray-300 bg-opacity-30 z-50 flex justify-center items-center"
        id="modal-edit-post-category" data-categories="{{json categories}}">
        <!-- Modal content -->
        <div class="bg-white rounded-lg shadow relative w-full max-w-2xl px-4 h-[40%] md:h-auto">
            <!-- Modal header -->
            <div class="flex items-start justify-between p-5 border-b rounded-t">
                <div>
                    <h2 class="text-2xl font-bold">
                        Chỉnh sửa thế loại bài viết
                    </h2>
                </div>

                <button type="button"
                    class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center"
                    id="close-modal-edit-post-category">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd"
                            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                            clip-rule="evenodd"></path>
                    </svg>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-6 space-y-6">
                <div>
                    {{> admin-input type="text" title="Tên thể loại" placeholder="Nhập tên thể loại"
                    name='name-post-category-update'
                    id='name-post-category-update' id-error= "name-post-category-update-error"
                    }}
                </div>
                <div>
                    {{> admin-input type="text" title="Mô tả thể loại" placeholder="Nhập mô tả thể loại"
                    name='description-post-category-update'
                    id='description-post-category-update' id-error= "description-post-category-update-error"
                    }}
                </div>
            </div>
            <!-- Modal footer -->
            <div class="items-center p-6 rounded-b text-end">
                <div>{{> admin-button title="Cập nhập thể loại" id="button-new-post-category-update" class=
                    "hover:bg-cyan-700"}}</div>
            </div>
        </div>
    </div>
    <div id="loading" class="hidden">
        {{> admin-loading}}
    </div>
    <div class="hidden fixed inset-0 bg-gray-300 bg-opacity-30 z-50 flex justify-center items-center" id="modal-status">
        <div class="bg-white rounded-lg shadow relative w-full max-w-[370px] px-4 h-[20%] md:h-auto">
            <div id="status" class="text-center py-[30px] text-[20px]">
            </div>
            <div class="items-center w-full p-6 rounded-b flex justify-center">
                <div class="w-1/2">{{> admin-button title="Thoát" id="exit-modal-status" class=
                    "!bg-green-500 hover:bg-cyan-700 !w-full"}}</div>
            </div>
        </div>
    </div>

    <div class="hidden fixed inset-0 bg-gray-300 bg-opacity-30 z-50 flex justify-center items-center"
        id="modal-delete-post-category">
        <div class="bg-white rounded-lg shadow relative w-full max-w-[370px] px-4 h-[20%] md:h-auto">
            <div class="text-center py-[30px] text-[20px]">
                Bạn có muốn xóa thể loại bài viết này không?
            </div>
            <!-- Modal footer -->
            <div class="items-center w-full p-6 rounded-b flex justify-center">
                <div class="w-1/2">{{> admin-button title="Hủy" id="cancel-modal-delete-post-category" class=
                    "!bg-red-500 hover:bg-cyan-700 mr-4 !w-full"}}</div>
                <div class="w-1/2">{{> admin-button title="Xóa" id="submit-delete-post-category" class=
                    "!bg-blue-500 hover:bg-cyan-700 ml-4 !w-full"}}</div>
            </div>
        </div>
    </div>
    <script type="module" src="/js/admin/post-content/post-content-category-update.js"></script>
    <script type="module" src="/js/admin/post-content/post-content-category-delete.js"></script>
</div>