<div>
    <div>
        <div class="flex justify-end mb-3">
            <div class="flex justify-end mr-4">
                <a href="/admin/post-content/category">{{> admin-button title="Thể loại bài viết"
                    id="new-post-content" class=
                    "!bg-green-500 hover:!bg-green-300"}}
                </a>
            </div>
            <div class="flex justify-end">
                <a href="/admin/post-content/new">{{> admin-button title="Tạo bài viết mới"
                    id="new-post-content" class=
                    "hover:bg-cyan-700"}}
                </a>
            </div>
        </div>
        {{#if postContents.length}}
        {{> admin-table headers= headers data= postContents keys= keys src= "/admin/post-content/update"
        button_delete="delete-post-content" id_status="post_content_status" isStatus=true}}
        {{{renderPagination currentPage totalPages limit}}}
        {{else}}
        <div class="flex items-center justify-center h-[500px]">
            <p class="text-[30px] font-bold text-gray-500">Không có dữ liệu.</p>
        </div>
        {{/if}}

    </div>

    <div class="hidden fixed inset-0 bg-gray-300 bg-opacity-30 z-50 flex justify-center items-center"
        id="modal-delete-post-content">
        <div class="bg-white rounded-lg shadow relative w-full max-w-[370px] px-4 h-[20%] md:h-auto">
            <div class="text-center py-[30px] text-[20px]">
                Bạn có muốn xóa bài viết này không?
            </div>
            <!-- Modal footer -->
            <div class="items-center w-full p-6 rounded-b flex justify-center">
                <div class="w-1/2">{{> admin-button title="Hủy" id="cancel-modal-delete-post-content" class=
                    "!bg-red-500 hover:bg-cyan-700 mr-4 !w-full"}}</div>
                <div class="w-1/2">{{> admin-button title="Xóa" id="submit-delete-post-content" class=
                    "!bg-blue-500 hover:bg-cyan-700 ml-4 !w-full"}}</div>
            </div>
        </div>
    </div>

    <div class="hidden fixed inset-0 bg-gray-300 bg-opacity-30 z-50 flex justify-center items-center" id="modal-status">
        <div class="bg-white rounded-lg shadow relative w-full max-w-[370px] px-4 h-[20%] md:h-auto">
            <div id="status" class="text-center py-[30px] text-[20px]">
            </div>
            <div class="items-center w-full p-6 rounded-b flex justify-center">
                <div class="w-1/2">{{> admin-button title="Thoát" id="exit-modal-status" class=
                    "!bg-green-500 hover:bg-cyan-700 !w-full"}}</div>
            </div>
        </div>
    </div>
    <div id="loading" class="hidden">
        {{> admin-loading}}
    </div>
    <script type="module" src="/js/admin/post-content/post-content-delete.js"></script>
    <script type="module" src="/js/admin/post-content/post-content-update-status.js"></script>
</div>